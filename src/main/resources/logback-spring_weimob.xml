<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml" />
<!-- 	<jmxConfigurator /> -->
    <!-- <springProfile name="dev,online"> -->
    	<appender name="rollingAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
		    <file>/data/applogs/crm/weimob-crm.log</file>
		    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">  
		        <fileNamePattern>/data/applogs/crm/his/weimob-crm.log.%d{yyyy-MM-dd}</fileNamePattern>
		        <maxHistory>60</maxHistory>  
		    </rollingPolicy>  
		    <encoder><!-- 必须指定，否则不会往文件输出内容 -->  
		        <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{3} - %msg%n</pattern>
				<charset class="java.nio.charset.Charset">UTF-8</charset>
		    </encoder>  
		    <append>false</append>  
		    <prudent>false</prudent>  
		</appender>
		<!--<appender name="catAppender" class="com.dianping.cat.logback.CatLogbackAppender">
			<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
				<level>ERROR</level>
			</filter>
		</appender>-->
		<appender name="perf-rollingAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
		    <file>/data/applogs/crm/weimob-crm-pref.log</file>
		    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">  
		        <fileNamePattern>/data/applogs/crm/his/weimob-crm-pref.log.%d{yyyy-MM-dd}</fileNamePattern>  
		        <maxHistory>60</maxHistory>  
		    </rollingPolicy>  
		    <encoder><!-- 必须指定，否则不会往文件输出内容 -->  
		        <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{3} - %msg%n</pattern>
				<charset class="java.nio.charset.Charset">UTF-8</charset>
		    </encoder>  
		    <append>false</append>  
		    <prudent>false</prudent>  
		</appender>
		<appender name="error-rollingAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
		    <file>/data/applogs/crm/weimob-crm-error.log</file>  
		    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">  
		        <fileNamePattern>/data/applogs/crm/his/weimob-crm-error.log.%d{yyyy-MM-dd}</fileNamePattern>  
		        <maxHistory>60</maxHistory>  
		    </rollingPolicy>  
		    <encoder><!-- 必须指定，否则不会往文件输出内容 -->  
		        <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{3} - %msg%n</pattern>
				<charset class="java.nio.charset.Charset">UTF-8</charset>
		    </encoder>  
		    <append>false</append>  
		    <prudent>false</prudent>  
		</appender>
		<logger name="performance" level="INFO">
		    <appender-ref ref="perf-rollingAppender" />  
		    <appender-ref ref="rollingAppender" />
		</logger>
		<logger name="error" level="INFO">
		    <appender-ref ref="error-rollingAppender" />  
		    <appender-ref ref="rollingAppender" />  
		</logger>
		<logger name="druid.sql.Statement" level="DEBUG">
            <appender-ref ref="CONSOLE" />
		</logger>
		<logger name="com.weimob" level="INFO">
		    <appender-ref ref="rollingAppender" />  
		</logger>
		<!--<root level="INFO">
            <appender-ref ref="CONSOLE" />
			<appender-ref ref="catAppender" />
		</root>-->
    <!-- </springProfile> -->
</configuration>